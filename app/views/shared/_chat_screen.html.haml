.chat
  .chat-side
    .chat-user
      %h5
        = current_user.name
      .chat-user__actions
        .chat-user__action
          = link_to new_chat_group_path do
            %i.fa.fa-pencil-square-o
        .chat-user__action
          = link_to edit_user_registration_path do
            %i.fa.fa-cog
    %ul.chat-groups
      - current_user.chat_groups.each do |chat_group|
        %li.chat-group
          = link_to "/chat_groups/#{chat_group.id}/messages", class: 'chat-group__link' do
            %p.chat-group__name
              = chat_group.name
            %p.chat-group__message
              Good bye world!
  .chat-main
    .chat-header
      .chat-header__left
        %h2
          = @chat_group.name
        %p.chat-header__users
          Members:
          - @chat_group.users.each do |user|
            = user.name
      .chat-header__right
        %p.chat-header__edit-btn
          = link_to "/chat_groups/#{@chat_group.id}/edit", class: 'chat_header__edit-btn__link' do
            Edit
    .chat-body
      %ul.chat-messages
        %li.class.chat-message
          %p.chat-message__name
            yoshimura
          %p.chat-message__time
            2016/09/29 02:23:55
          %p.chat-message__body
            Hello world!
        %li.class.chat-message
          .chat-message__header
            %p.chat-message__name
              iwai
            %p.chat-message__time
              2016/10/20 02:23:55
            %p.chat-message__body
              Good bye world!
    .chat-footer
      .chat-footer__body
        %textarea{:placeholder => "type a message"}
        %label.chat-footer__body__image
          %i.fa.fa-image
      %p.chat-footer__send-btn Send
